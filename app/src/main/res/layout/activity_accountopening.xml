<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="1dp">

            <include
                layout="@layout/toolbar_withback"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/standard_page_margin"
                android:layout_marginLeft="@dimen/standard_page_margin"
                android:layout_marginRight="@dimen/standard_page_margin"
                android:layout_marginTop="@dimen/margin_from_button"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Open accounts in a few easy steps"
                    android:textColor="?attr/_ubnColorPrimary"/>

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lorem_ipsum"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="1dp"
                        android:background="?attr/_ubnColorPrimary"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView34"
                            fontPath="fonts/GothamRounded-Bold.otf"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/edit_padding"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="70sp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/textView35"
                            fontPath="fonts/GothamRounded-Medium.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:gravity="center|left"
                            android:text="Select\naccount"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/optionRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:divider="@color/clouds"
                        android:dividerHeight="1dp"
                        android:dividerPadding="2dp"
                        android:orientation="vertical"
                        android:showDividers="middle">
                    </RadioGroup>

                    <!--<ListView
                        android:background="@drawable/rectangle_clouds_border"
                        android:id="@+id/accountsList"
                        android:layout_width="match_parent"
                        android:divider="@color/clouds"
                        android:dividerHeight="0.5dp"
                        android:layout_weight="2"
                        android:layout_height="0dp"/>-->

                    <Button
                        android:id="@+id/btnContinue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="@dimen/margin_from_button"
                        android:layout_weight="0.0"
                        android:clickable="true"
                        android:text="Continue"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/standard_page_margin"
            android:layout_marginLeft="@dimen/standard_page_margin"
            android:layout_marginRight="@dimen/standard_page_margin">
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
