<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="0.5dp"
    android:layout_marginRight="0.5dp"
    android:layout_marginTop="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="2dp">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="74dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/beneficiary_name"
                    fontPath="fonts/GothamRounded-Book.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="2dp"
                    android:text="Toochi Okpalaugo"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/beneficiary_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="2dp"
                    android:text="Glo"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/beneficiary_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="2dp"
                    android:text="+254710584935"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="74dp"
                android:layout_height="@dimen/icon_36"
                android:layout_gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageTransfer"
                    android:layout_width="@dimen/icon_36"
                    android:layout_height="@dimen/icon_36"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_transfers_big"/>

                <ImageButton
                    android:id="@+id/imageDelete"
                    android:layout_width="@dimen/icon_36"
                    android:layout_height="@dimen/icon_36"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_trash_can_red"
                    android:tag="test"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>