<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_patterns_bg"
    tools:context=".core.ui.Sign_In">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/union_girl_full"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left|top"
            android:layout_margin="4dp"
            android:background="?attr/_ubnColorPrimary"
            android:src="@drawable/ubn_logo"/>

        <RelativeLayout
            android:id="@+id/login_fields"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/textView"
                fontPath="fonts/GothamRounded-Medium.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="240dp"
                android:padding="@dimen/edit_padding"
                android:text="User sign in"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/headings_dimens"
                android:textStyle="bold"/>


            <EditText
                android:id="@+id/jina"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:layout_marginBottom="@dimen/space_between_form_items"
                android:background="@drawable/rounded_rectangle_white_border_white_solid"
                android:hint="@string/form_hint_username"
                android:padding="@dimen/edit_padding"
                android:textColor="@color/asbestos"
                android:textColorHint="@color/asbestos"/>


            <EditText
                android:id="@+id/siri"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_alignEnd="@+id/jina"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/jina"
                android:layout_below="@id/jina"
                android:background="@drawable/rounded_rectangle_white_border_white_solid"
                android:ems="10"
                android:hint="@string/form_hint_password"
                android:inputType="textPassword"
                android:padding="@dimen/edit_padding"
                android:textColor="@color/asbestos"
                android:textColorHint="@color/asbestos"/>


            <TextView
                android:id="@+id/sahausiri"
                fontPath="fonts/GothamRounded-Medium.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/siri"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:onClick="startPasswordRecovery"
                android:text="@string/forgot_password"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sahausiri"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNew"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_blue_solid"
                    android:text="@string/btn_sign_up"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    />

                <Button
                    android:id="@+id/btnSignIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_blue_solid"
                    android:text="@string/btn_sign_in"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btnWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_rectangle_blue_solid"
                android:text="@string/btn_continue_wallet"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
