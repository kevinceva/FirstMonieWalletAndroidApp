<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_atmlocator"
    tools:showIn="@layout/activity_bio_tcs"
    android:layout_marginTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/standard_page_margin"
            android:layout_marginRight="@dimen/standard_page_margin"
            android:layout_marginTop="@dimen/margin_from_button"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="?attr/_ubnColorPrimary"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView34"
                    fontPath="fonts/GothamRounded-Bold.otf"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/edit_padding"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="70sp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/textView35"
                    fontPath="fonts/GothamRounded-Medium.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:text="Terms and Conditions"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_clouds_border"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_from_button">

                    <TextView
                        android:id="@+id/textViewTerms"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height"
                        android:text="@string/ipsum"
                        android:textSize="10sp"/>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="@dimen/margin_from_button"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDecline"
                    style="@style/AppTheme.Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    android:text="I decline"/>

                <Button
                    android:id="@+id/button6"
                    style="@style/AppTheme.Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:onClick="onContinueClick"
                    android:text="I accept"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
