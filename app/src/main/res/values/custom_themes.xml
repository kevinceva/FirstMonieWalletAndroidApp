<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/MyTheme.ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
        <item name="swirl_ridgeColor">@color/white</item>
        <item name="swirl_errorColor">@color/colorAccent</item>
    </style>

    <style name="MyThemeWithActionbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyThemeTransparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/MyThemeTransparent.ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyThemeTransparent.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundStacked">@android:color/transparent</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/MyTheme.ActionBar</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:editTextStyle">@style/AppTheme.Widget.EditText</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
        <item name="swirl_ridgeColor">@color/white</item>
        <item name="swirl_errorColor">@color/orange</item>
        <item name="android:buttonStyle">@style/AppTheme.ParentButton</item>
    </style>

    <style name="MyMaterialTheme.Base.TransparentStatus" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyTheme.ActionBar</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:buttonStyle">@style/AppTheme.Widget.Button</item>
        <item name="android:editTextStyle">@style/AppTheme.Widget.EditText</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
        <item name="swirl_ridgeColor">@color/white</item>
        <item name="swirl_errorColor">@color/orange</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Custom themes -->
    <!--Start of Union Blue Theme -->
    <style name="Theme.UnionBlue" parent="MyMaterialTheme.Base">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/ubn_blue_alt</item>
        <item name="colorPrimaryDark">@color/ubn_blue_alt</item>
        <item name="colorAccent">@color/union_gold</item>
        <item name="_ubnColorPrimary">@color/ubn_blue_alt</item>
        <item name="_ubnColorPrimaryDark">@color/dark_blue_true</item>
        <item name="_ubnColorButtonBackground">@color/union_gold</item>
        <item name="_ubnColorButtonText">@color/union_black</item>
        <item name="_ubnColorDashboardBox">@color/clouds</item>
        <item name="_ubnColorDashboardBoxText">@color/union_black</item>
    </style>

    <!-- Union Brown -->
    <style name="Theme.UnionBrown" parent="MyMaterialTheme.Base">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/union_brown</item>
        <item name="colorPrimaryDark">@color/union_brown</item>
        <item name="colorAccent">@color/union_black</item>
        <item name="_ubnColorPrimary">@color/union_brown</item>
        <item name="_ubnColorPrimaryDark">@color/union_brown_darker</item>
        <item name="_ubnColorButtonBackground">@color/union_black</item>
        <item name="_ubnColorButtonText">@color/white</item>
        <item name="_ubnColorDashboardBox">@color/union_black</item>
        <item name="_ubnColorDashboardBoxText">@color/white</item>
    </style>

    <!-- Union Green -->
    <style name="Theme.UnionGreen" parent="MyMaterialTheme.Base">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/union_green</item>
        <item name="colorPrimaryDark">@color/union_green_darker</item>
        <item name="colorAccent">@color/union_green</item>
        <item name="_ubnColorPrimary">@color/union_green</item>
        <item name="_ubnColorPrimaryDark">@color/union_green_darker</item>
        <item name="_ubnColorButtonBackground">@color/union_green</item>
        <item name="_ubnColorButtonText">@color/white</item>
        <item name="_ubnColorDashboardBox">@color/clouds</item>
        <item name="_ubnColorDashboardBoxText">@color/union_black</item>
    </style>


</resources>