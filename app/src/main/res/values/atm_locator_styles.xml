<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--- App main Styles -->
    <style name="LocatorTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="LocatorTheme" parent="LocatorTheme.Base">

    </style>


    <style name="DetailsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


    <style name="DetailsThemeNo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


    <style name="FTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#76424242</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="QText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#F44336</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:dropDownItemStyle">@style/DropDownListStyle</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">@drawable/spinner_popup_bg</item>
        <item name="android:dropDownVerticalOffset">30dip</item>
        <item name="android:dropDownHorizontalOffset">-50dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DropDownListStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="Theme.TangerineMobile" parent="android:Theme.Black">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="Theme.TangerineMobile.NoTitleBar" parent="android:Theme.Black.NoTitleBar">
        <item name="android:typeface">sans</item>

    </style>

    <style name="Theme.TangerineMobile.Fullscreen" parent="android:Theme.Black.NoTitleBar.Fullscreen"></style>

    <style name="LocatorTheme2" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:alertDialogTheme">@style/YourAlertDialogTheme</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionModeBackground">@android:color/white</item>

    </style>

    <style name="LocatorTheme.ActionBar.Transparent" parent="LocatorTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/toolbarTransparent</item>

        <item name="android:windowActionBarOverlay">true</item>
    </style>


    <style name="Theme.YourTheme" parent="@android:style/Theme.Holo">
        <item name="android:alertDialogTheme">@style/YourAlertDialogTheme</item>
    </style>

    <style name="YourAlertDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>

    </style>


    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- This would set the toolbar's background color -->
        <item name="android:background">@color/colorPrimary</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <!--<item name="android:textColorPrimary">@android:color/holo_blue_light</item>-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- android:actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="android:actionMenuTextColor">@android:color/white</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>

        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>

        <item name="popupTheme">@style/LocatorTheme.PopupMenuStyle</item>

    </style>


    <style name="LocatorTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="LocatorTheme.PopupMenuStyle" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/union_girl_full</item>
    </style>


    <style name="LocatorTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>